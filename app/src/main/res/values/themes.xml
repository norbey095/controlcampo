    <style name="Theme.ControlCampo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores de tu app -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <style name="AutoCompleteTextStyle" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextRedondeado" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

</resources>
